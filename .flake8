# This is an example .flake8 config, used when developing *Black* itself.
# Keep in sync with setup.cfg which is used for source packages.

[flake8]
ignore = W503, E203, E221, C901, C408, W605, E501, B905
max-line-length = 100
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude = build,__init__.py,projects,cross_validation,deeplab_2d,conf.py,modeling,comp2comp/visualization/detectron_visualizer.py